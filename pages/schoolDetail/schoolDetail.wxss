.study {
  padding: 0 36rpx 0 34rpx;
}

.study-title {
  opacity: 0.7;
  font-size: 28rpx;
  color: #5b6369;
  text-align: center;
  margin-top: 20rpx;
}

.study-view {
  margin-top: 20rpx;
  border-radius: 4rpx;
  display: flex;
  flex-wrap: wrap;
}

.study-view .study-item {
  width: 50%;
  opacity: 0.7;
  font-size: 30rpx;
  color: #252628;
  height: 46rpx;
  line-height: 46rpx;
  margin-bottom: 20rpx;
}

.line {
  padding: 0 36rpx 0 34rpx;
  width: 100%;
  height: 500rpx;
  position: relative;
}
.line-bar {
  padding: 0 36rpx 0 34rpx;
  width: 100%;
  /* max-height: 1000rpx;
  min-height: 400rpx; */
  height: 600rpx;
  position: relative;
}
.line-title {
  opacity: 0.7;
  font-size: 28rpx;
  color: #5b6369;
  text-align: center;
  margin-top: 20rpx;
  position: absolute;
  top: 30rpx;
  left: 0;
  right: 30rpx;
  margin: auto;
}

.canvas {
  margin: 20rpx auto;
  width: 280px;
}

.tabs {
  display: flex;
  margin: 20rpx 100rpx 0;
  position: absolute;
  top: 21rpx;
  left: 0;
  width: 530rpx;
  z-index: 20;
}

.tabs>view {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #5b6369;
}

.tabs>view.on {
  border: 2rpx solid #f7ce2c;
  border-bottom: none;
  border-radius: 10rpx 10rpx 0 0;
}
