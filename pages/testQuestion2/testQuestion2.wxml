<!--pages/testQuestion/testQuestion.wxml-->
<view class='container' wx:if='{{!isComplete}}'>
  <view class='test-num'>{{result[num].ORDER_NUM}}/{{result.length}}</view>
  <view class='test-question'>
    <view>
      {{result[num].QUESTIONS}}
    </view>
  </view>
  <view class='answer-1' data-id='{{result[num].RESULT1}}' bindtap='answer'>
    {{result[num].OPTION1}}
  </view>
  <view class='answer-2' data-id='{{result[num].RESULT2}}' bindtap='answer'>
    {{result[num].OPTION2}}
  </view>

</view>
<view wx:else>
  <view class='result-title'>
    <image src='{{userInfo.avatarUrl}}'></image>
  </view>
  <view class='result-detail'>
    <view class='username'>{{userInfo.nickName}}</view>
    <view class='radar'>
      <canvas canvas-id="radarCanvas" class="canvas"></canvas>
    </view>
    <block wx:if='{{canSee == 1}}'>
      <view class='item-title'>测试结论</view>
      <view class='item-detail'>
        <view>{{testResult.TEST_SCORE}}</view>
        <view>{{testResult.TEST_RESULT_EXPLAIN}}</view>
      </view>
      <image class="buy-img3" src="https://fjgz360.cn/chuxian/webPage/images/icon/漳州用户@2x.png"></image>
    </block>
    <block wx:else>
      <image class="buy-img" bindtap="buy" src="https://fjgz360.cn/chuxian/webPage/images/icon/心理测试@3x.png"></image>
      <image class="buy-img2" bindtap="applyvip" src="https://fjgz360.cn/chuxian/webPage/images/icon/解锁会员@3x.png"></image>
    </block>
  </view>
  <view class='result-footer'></view>
</view>