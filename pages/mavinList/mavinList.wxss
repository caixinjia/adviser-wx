/* pages/mavinList/mavinList.wxss */

page {
  background: #f4f4f4;
}

.search-bar {
  background: #f7ce2c;
  height: 90rpx;
  display: flex;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 2;
}

.search-bar input {
  background: #fff;
  border-radius: 98rpx;
  width: 540rpx;
  height: 60rpx;
  margin: 16rpx 20rpx 14rpx 20rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.search-bar .filter-btn {
  font-size: 28rpx;
  color: #fff;
  flex: 1;
  margin-top: 26rpx;
  padding-left: 16rpx;
  border-left: 2rpx solid #fff;
  height: 40rpx;
}

.result-list {
  position: relative;
  z-index: 1;
  margin-top: 110rpx;
}

.result-item {
  width: 670rpx;
  height: 410rpx;
  background: #fff;
  box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.20);
  border-radius: 5px;
  margin: 0 20rpx 30rpx 20rpx;
  padding: 20rpx;
}

.mavin-data {
  display: flex;
  margin-bottom: 20rpx;
}

.mavin-data>image {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #c1c5d5;
  border-radius: 50%;
}

.mavin-data>view {
  width:510rpx;
}

.mavin-data>view .mavin-name {
  font-size: 36rpx;
  color: #252628;
  letter-spacing: 0;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.mavin-data>view .mavin-name view {
  font-size: 28rpx;
  color: rgba(19, -2147483648, -2147483648, 0.70);
  line-height: 50rpx;
  margin-left: 10rpx;
  display: inline-block;
}

.mavin-category {
  opacity: 0.7;
  font-size: 28rpx;
  color: #252628;
  line-height: 46rpx;
  text-align: center;
  height: 46rpx;
  margin-top: 12rpx;
}

.mavin-btns {
  margin-top: 12rpx;
  display: flex;
  padding: 0 32rpx;
}

.mavin-btns .mavin-zixun {
  font-size: 28rpx;
  color: #f7ce2c;
  flex: 1;
  padding-left: 50rpx;
  background: url("https://fjgz360.cn/chuxian/webPage/images/icon/zhuanjiazixun@3x.png") no-repeat left center;
  background-size: 36rpx;
}

.mavin-btns .mavin-yuyue {
  font-size: 28rpx;
  color: #f7ce2c;
  flex: 1;
  padding-left: 50rpx;
  background: url("https://fjgz360.cn/chuxian/webPage/images/icon/zhuanjiayuyue@3x.png") no-repeat left center;
  background-size: 36rpx;
}

.mavin-explain {
  background: #f4f4f4;
  border-radius: 2px;
  font-size: 24rpx;
  color: #5b6369;
  height:205rpx;
  padding: 10rpx 20rpx;
  overflow:auto;
}

/* 筛选 */

.mask {
  background: rgba(0, 0, 0, 0.5);
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: none;
  z-index: 10000;
}

.mask.open {
  display: block;
}

.filter-dialog {
  background: #fff;
  width: 670rpx;
  height: calc(100% - 16rpx);
  margin-left: 80rpx;
  padding-top: 16rpx;
  position: relative;
}

.filter-dialog input {
  padding-left: 30rpx;
  font-size: 28rpx;
  background: #f4f4f4;
  border-radius: 98rpx;
  width: 580rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 30rpx;
}

.subject-type {
  margin-top: 50rpx;
  padding: 0 20rpx 0 30rpx;
}

.filter-title {
  font-size: 28rpx;
  color: #c1c5d5;
  letter-spacing: 0;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-options view {
  background: #f4f4f4;
  border-radius: 5px;
  height: 80rpx;
  width: 180rpx;
  font-size: 28rpx;
  color: #252628;
  letter-spacing: 0;
  text-align: center;
  line-height: 80rpx;
  margin-top: 20rpx;
  margin-right: 40rpx;
}

.filter-options view.on {
  background: #fff082;
}

.filter-options view:nth-child(3n) {
  margin-right: 0;
}

.recruit-batch {
  margin-top: 50rpx;
  padding: 0 20rpx 0 30rpx;
}

.filter-btns {
  width: 670rpx;
  height: 98rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  font-size: 28rpx;
  color: #252628;
  letter-spacing: 0;
  text-align: center;
  line-height: 98rpx;
}

.filter-btns view {
  flex: 1;
}

.filter-btns .reset-btn {
  background: rgba(255, 240, 130, 0.5);
}

.filter-btns .search-btn {
  background: #f7ce2c;
}
