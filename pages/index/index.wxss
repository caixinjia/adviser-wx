}

/* 登录注册弹窗 */

.mask {
  background: rgba(255, 255, 255, 0);
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: none;
  z-index: 10000；;
}

.mask.on {
  display: block;
}

.login-dialog {
  background: #fff;
  box-shadow: 0 18rpx 60rpx 0 rgba(72, 136, 166, 0.18);
  border-radius: 20rpx;
  width: 558rpx;
  height: 700rpx;
  position: absolute;
  top: 200rpx;
  left: 96rpx;
}

.user-img {
  margin-top: 60rpx;
}

.user-img image {
  margin-left: 190rpx;
  width: 180rpx;
  height: 180rpx;
  box-shadow: 0 4px 14px 0 rgba(138, 127, 56, 0.25);
  border-radius: 50%;
}

.phone-input {
  border: 2rpx solid #e9ebee;
  border-radius: 200rpx;
  width: 376rpx;
  height: 90rpx;
  margin: 50rpx 70rpx 0 72rpx;
  font-size: 28rpx;
  color: #252628;
  padding-left: 40rpx;
}
.pwd-input {
  border: 2rpx solid #e9ebee;
  border-radius: 200rpx;
  width: 376rpx;
  height: 90rpx;
  margin: 20rpx 70rpx 0 72rpx;
  font-size: 28rpx;
  color: #252628;
  padding-left: 40rpx;
}
.login-btn{
  background: #F7CE2C;
box-shadow: 0 8rpx 26rpx 0 rgba(138,127,56,0.25);
border-radius: 200rpx;
font-size: 36rpx;
color: #252628;
