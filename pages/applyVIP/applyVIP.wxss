.activationCodeVip {
  position: absolute;
  top: 420rpx;
  margin: auto;
  width: 600rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
}

.activationCodeVip input {
  background: #fff;
  border-radius: 4rpx 0 0 4rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  height: 56rpx;
  flex: 1;
}

.activationCodeVip-btn {
  background: #88674c;
  border-radius: 0 4rpx 4rpx 0;
  color: #fff;
  font-size: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  width: 100rpx;
}
